  @media mq-half2
    font-size: 15px
    line-height:23px
    margin-top:100px

#features a 
  color: color-black2

#features .item p.detail 
  margin-top:20px
  font-size:15px
  line-height:20px
  display:block
  @media mq-half2
    font-size:13px

#features .item
  vertical-align: top;
  margin:0 20px
  width:165px
  height:125px
  padding-bottom:230px
  text-align:center
  display:inline-block
  background-size:165px 124px
  background-repeat: no-repeat
  background-position: center top
  margin-bottom:80px
  @media mq-large
    margin:0 30px 80px 30px
  @media mq-mobile
    margin:0 25px 80px 25px
