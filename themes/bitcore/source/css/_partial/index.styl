getting-started-bg = #c8c8c8
getting-started-height = 40px

intro-feature-margin = 50px
intro-feature-column = 3
intro-quick-start-column = 2

#animation
  margin:auto
  width:190px
  @media mq-mobile
    width:120px
  @media mq-small
    width:80px

#animation-inner
  position:absolute;
  top:40px

#ball 
  position:absolute
  top:10px
  height:160px
  width:169px
  background-repeat:no-repeat
  background-size: 160px 150px
  background-image: url("images/lava-ball.png")
  @media mq-mobile
    background-size: 110px 105px
    width:120px
    top:40px
    height:112px
  @media mq-small
    top:20px
    background-size: 80px 76px
    width:80px
    height:76px

#shadow-ball 
  position:absolute
  top:190px
  background-size: 180px 20px
  width:200px
  height:180px
  margin-left:-6px
  background-repeat:no-repeat
  background-image: url("images/shadow-lava-ball.svg")
  @media mq-mobile
    background-size: 120px 10px
    width:120px
    margin-left:0
    top:160px
  @media mq-small
    width:80px
    top:110px
    margin-left:0
    background-size:80px 10px

#terminal
  position:absolute
  width: 350px
  margin-bottom: 25px
  background-image: url("images/terminal-bg.svg")
  background-repeat: no-repeat
  height:147px
  background-position: center center
  line-height: 1.6
  text-align:center
  list-style: outside none none
  margin: 0px auto
  z-index:100
  color: #FFF
  padding: 20px 0px 0px
  font-size: 1.2em
  @media mq-half4
    width:87%

.browser-icon
  position:relative
  top:16px
  background-position: right center;
  background-repeat: no-repeat
  background-image: url("images/browser-icon.svg")
  margin: 20px 0px 10px
  height: 34px
  @media mq-half4
    background-image:none

#terminal li
  margin:10px 0
  padding: 5px 0px 0px
  
.nodejs-icon
  position:relative
  top:21px
  height: 34px
  background-repeat: no-repeat
  background-image: url("images/nodejs-icon.svg")
  @media mq-half4
    background-image:none

#getting-started a
  color:#000

